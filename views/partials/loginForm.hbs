<div class="row col-lg-4 col-md-6 col-sm-10 mx-auto p-3 d-flex align-items-center justify-content-center flex-column form-card">
    {{> messages}}
    <img src="https://via.placeholder.com/400x100" alt="">
    <h3 class="pt-3">Sign into your account</h3>
    <form action="/users/login" method="post" class="form-group w-75">
        <div class="row pt-3">
            <div class="col-lg-12 pl-0">
                <input
                        type="email"
                        name="email"
                        value="{{#if email}}{{email}}{{/if}}"
                        required
                        class="w-100 input"
                        placeholder="Email"
                >
                <div class="input-label">Email</div>
            </div>
        </div>
        <!-- /email row-->
        <div class="row pt-5">
            <div class="col-lg-12 pl-0">
                <input
                        type="password"
                        name="password"
                        value="{{#if password}}{{password}}{{/if}}"
                        required
                        class="w-100 input"
                        placeholder="Password"
                >
                <div class="input-label">Password</div>
            </div>
        </div>


        <div class="row pt-3">
            <div class="col-lg-6 pl-0 d-flex align-items-center">
                <span><a href="/users/register" class="">Create account</a></span>
            </div>
            <div class="col-lg-6">
                <button type="submit" class="btn btn-primary float-right">Sign in</button>
            </div>
        </div>


    </form>
</div>